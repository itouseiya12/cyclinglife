<div class="cover-index">
  <div class="container">
    <div class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <h1 class="font-weight-normal mt-3">いいねした投稿</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-10 mx-auto">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th class="caption">投稿画像</th>
              <th class="caption">コメント数</th>
              <th class="caption">いいね数</th>
            </tr>
          </thead>
          <tbody>
            <% @favorite_posts.each do |post| %>
              <tr>
                <td class="caption">
                  <%= image_tag post.postimage.to_s, size: "150x100" %>
                  <p><%= link_to post.location ,post_path(post) %></p>
                  <p><%= link_to post.user.name ,user_path(post.user) %></p>
                </td>
                <td class="caption"><%= "#{post.comments.count}" %></td>
                <td class="caption"><%= post.favorited_users.count %></td>
              </tr>  
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
