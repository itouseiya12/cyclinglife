<div class="cover-post-edit">
  <h1 class="font-weight-normal mt-5 mb-5">編集</h1>
  <div class="img-box">
    <%= image_tag @post.postimage.url, :size => '300x225' %>
  </div>
  <div class="box-inner">
    <%= form_with model: @post, url:"/posts/#{@post.id}", local:true do |f| %>
      <%= render 'shared/error', object: f.object %>
      <div class="form-group">
        <label class="form-label">撮影場所</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">詳細</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <label class="form-image">
        <span class="image-file">クリックして投稿したい画像を選択</span>
        <%= f.file_field :postimage , id:"item-image", class:"hidden" %>
      </label>
      <div class="form-group">
        <label class="form-label">施設名、又は住所</label>
        <%= f.text_field :address,placeholder: "入力するとGoogleMap表示", class: "form-control" %>
      </div>
      <div class="post-button">
        <%= f.submit '保存する', class: "btn btn-success" %><br>
        <%= link_to '投稿詳細ページへ', post_path(@post), class: "btn btn-dark mt-3" %>
      </div>
    <% end %>
  </div>
</div>
