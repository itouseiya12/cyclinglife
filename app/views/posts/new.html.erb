<div class="cover-new">
  <div class="box-inner">
    <%= form_with model: @post, url:'/posts', local:true do |f| %>
    <%= render 'shared/error', object: f.object %>
    <h1>新規投稿</h1>
    <div class="form-group">
      <label class="form-label">撮影場所</label>
      <%= f.text_field :location,placeholder: "", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="form-label">感想</label>
      <%=f.text_area :text,placeholder: "", class: "form-control" %>
    </div>
    <label class="form-image">
      <span class="image-file">クリックして投稿したい画像を選択</span>
      <%= f.file_field :postimage, id:"item-image", class:"hidden" %>
    </label>
    <div class="field">
      <%= f.text_field :address,placeholder: "場所を入力してください", class: "form-control" %>
    </div>
    <div class="post-button">
      <%= f.submit '投稿する', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
