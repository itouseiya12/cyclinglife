<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post, url:'/posts', local:true do |f| %>
        <%= render 'shared/error', object: f.object %>
      <div class="form-group">
        <label class="form-label">撮影場所</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">感想</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="field">
        <label class="form-label">投稿画像</label>
        <%= f.file_field :postimage %>
      </div>
      <%= f.submit '投稿する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
