<div class="cover-index">
  <div class="container">
    <div class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <h1 class="font-weight-normal mt-3">投稿一覧</h1>
        <%= form_with url: posts_path, method: :get, local: true do |f| %>
        <%= f.text_field :search %>
        <%= f.submit '検索する', name: nil %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-10 mx-auto">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th class="caption">投稿画像</th>
              <th class="caption">撮影場所</th>
              <th class="caption">ユーザー名</th>
              <th class="caption">コメント数</th>
              <th class="caption">いいね数</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td class="caption">
                  <%= image_tag post.postimage.to_s, size: "150x100" %>
                </td>
                <td class="caption"><%= link_to post.location ,post_path(post) %></td>
                <td class="caption"><%= post.user.name %></td>
                <td class="caption"><%= "#{post.comments.count}" %></td>
                <td class="caption"><%= post.favorited_users.count %></td>
              </tr>  
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
