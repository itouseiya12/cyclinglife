<div class="cover-index">
  <div class="container">
    <div class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <h1 class="font-weight-normal mt-3">投稿一覧</h1>
        <%= form_with url: posts_path, method: :get, local: true do |f| %>
        <%= f.text_field :search %>
        <%= f.submit '検索する', name: nil %>
        <% end %>
      </div>
    </div>
    <div class="box-inner card w-100">
      <% @posts.each do |post| %>
      <div class="one-post">
        <%= link_to post_path(post) do %>
        <%= image_tag post.postimage.to_s, size: "150x100" %>
        <p class="caption"><%= post.user.name %></p>
        <p class="caption"><%= post.location %></p>
        <p class="caption"><%= "コメント数: #{post.comments.count}" %></p>
        <p class="caption">いいね数：<%= post.favorited_users.count %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
